{
    "name": "havn/laravel-executable",
    "description": "Single-task action classes for Laravel. Fully queueable, with a testing API that makes you like writing tests more than the actual code.",
    "keywords": [
        "laravel",
        "actions",
        "executable",
        "queue",
        "jobs",
        "single-responsibility"
    ],
    "homepage": "https://github.com/havnnl/laravel-executable",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Henk Koop",
            "email": "henk@havn.nl",
            "homepage": "https://havn.nl",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/havnnl/laravel-executable/issues",
        "discussions": "https://github.com/havnnl/laravel-executable/discussions"
    },
    "require": {
        "php": "^8.3",
        "illuminate/contracts": "^12.0|^13.0",
        "illuminate/queue": "^12.0|^13.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.14",
        "orchestra/testbench": "^10.0|^11.0",
        "pestphp/pest": "^4.0",
        "phpstan/extension-installer": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Havn\\Executable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Havn\\Executable\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse --memory-limit 1024M",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "qa": [
            "@format",
            "@analyse",
            "@test --compact"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Havn\\Executable\\ExecutableServiceProvider"
            ]
        },
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    },
    "conflict": {
        "phpstan/phpstan": "<2.1.23"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
